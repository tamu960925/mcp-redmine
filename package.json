{
  "name": "mcp-redmine",
  "version": "1.0.0",
  "description": "Model Context Protocol server for Redmine integration",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
